{
    "compilerOptions": {
      "baseUrl": "./",                        // Root directory for resolving non-relative paths
      "paths": {
        "@/*": ["src/*"]                      // Maps '@' to 'src' for cleaner imports
      },
      "target": "ES6",
      "module": "CommonJS",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  